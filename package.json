{
  "name": "rag-mcp-server",
  "version": "0.1.0",
  "description": "MCP-based RAG Document Management System with vLLM integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "migrate": "tsx src/database/migrate.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "rag",
    "mcp",
    "vllm",
    "embeddings",
    "pgvector"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "cheerio": "^1.1.2",
    "chokidar": "^4.0.3",
    "dotenv": "^17.2.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.16.3",
    "pgvector": "^0.2.1",
    "sharp": "^0.34.3",
    "tesseract.js": "^6.0.1",
    "undici": "^7.15.0",
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/pdf-parse": "^1.1.5",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "jest": "^30.1.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
